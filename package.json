    "@types/express": "^4.17.17",
    "@types/node": "^18.16.2",
    "copyfiles": "^2.4.1",
    "nodemon": "^2.0.22",
    "pre-commit": "^1.2.2",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
